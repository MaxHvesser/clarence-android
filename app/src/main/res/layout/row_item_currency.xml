<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/large"
    android:background="@android:color/white">

    <!-- Emoji Flag -->
    <ImageView
        android:id="@+id/row_currency_flag"
        android:layout_width="@dimen/currency_row_flag_size"
        android:layout_height="@dimen/currency_row_flag_size"
        android:src="@drawable/ic_flag_norway"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Currency Name -->
    <TextView
        android:id="@+id/row_currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/regular"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/textStrongSecondary"
        android:fontFamily="@font/quicksand_medium"
        app:layout_constraintStart_toEndOf="@id/row_currency_flag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="GBP"/>

    <!-- Value EditText -->
    <EditText
        android:id="@+id/row_currency_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textStrong"
        android:textSize="@dimen/text_huge"
        android:fontFamily="@font/quicksand_medium"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="10,000"/>

</androidx.constraintlayout.widget.ConstraintLayout>