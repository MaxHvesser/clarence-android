<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/currency_display_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Value -->
    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_huge"
        android:fontFamily="@font/roboto_mono_medium"
        android:includeFontPadding="false"
        android:textColor="@color/textStrong"
        android:singleLine="true"
        android:ellipsize="marquee"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="20,456,983 00000000000000000"/>

    <!-- Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_tiny"
        android:fontFamily="@font/roboto_mono_light"
        android:includeFontPadding="false"
        android:textColor="@color/textMedium"
        app:layout_constraintTop_toBottomOf="@id/value"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Great British Pounds"/>

</androidx.constraintlayout.widget.ConstraintLayout>