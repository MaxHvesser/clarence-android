<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- region Base Theme -->
    <style name="BaseDarkTheme" parent="BaseTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>
    <!-- endregion -->

    <!-- region Splash Theme -->
    <style name="SplashTheme" parent="BaseDarkTheme">
        <item name="android:navigationBarColor">@color/backgroundSecondary</item>
    </style>
    <!-- endregion -->

    <!-- region App Theme -->
    <style name="AppTheme" parent="BaseDarkTheme">
        <item name="android:navigationBarColor">@color/backgroundPrimary</item>
    </style>
    <!-- endregion -->

</resources>